<div class="central-container">
  <h1><%= @article.title %></h1>
  <%= link_to fa_icon("pencil"), edit_article_path %>
  <%= link_to fa_icon("trash-can"),
              article_path(@article),
              method: :delete,
              data: { confirm: 'Are you sure?' }%>

  <hr>
  <p><%= @article.content %></p>
  <%= link_to "Back to articles", articles_path %>
</div>
